@model IEnumerable<SwapSmart.Models.TradeOffer>
@{
    ViewData["Title"] = "Gelen Teklifler";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-12">
        <h2>Gelen Teklifler</h2>
        <p class="text-muted">İlanlarınıza gelen takas teklifleri</p>
    </div>
</div>

@if (!Model.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <p class="text-muted mb-4">Henüz takas teklifi yok.</p>
                    <p class="text-muted small">İlanlarınıza takas teklifleri geldiğinde burada görünecektir.</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var offer in Model)
        {
            <div class="col-12 col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="row mb-3">
                            <div class="col-12 mb-3">
                                <h5 class="card-title">Karşı Tarafın Teklif Ettiği İlan</h5>
                                <div class="row">
                                    <div class="col-4">
                                        @if (offer.OfferedItem?.Images.Any() == true)
                                        {
                                            <img src="@offer.OfferedItem.Images.First().ImagePath" class="img-fluid rounded" alt="@offer.OfferedItem.Title" />
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 100px;">
                                                <span class="text-muted small">Fotoğraf Yok</span>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-8">
                                        <h6>@offer.OfferedItem?.Title</h6>
                                        <p class="text-muted small mb-1">@offer.Sender?.FullName</p>
                                        <small class="text-muted">
                                            ₺@offer.OfferedItem?.EstimatedMinValue.ToString("N0") - ₺@offer.OfferedItem?.EstimatedMaxValue.ToString("N0")
                                        </small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <h6 class="text-muted">Senin İlanın</h6>
                                <div class="row">
                                    <div class="col-4">
                                        @if (offer.RequestedItem?.Images.Any() == true)
                                        {
                                            <img src="@offer.RequestedItem.Images.First().ImagePath" class="img-fluid rounded" alt="@offer.RequestedItem.Title" />
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 100px;">
                                                <span class="text-muted small">Fotoğraf Yok</span>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-8">
                                        <h6>@offer.RequestedItem?.Title</h6>
                                        <small class="text-muted">
                                            ₺@offer.RequestedItem?.EstimatedMinValue.ToString("N0") - ₺@offer.RequestedItem?.EstimatedMaxValue.ToString("N0")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <strong>Tarih:</strong> @offer.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </div>
                        
                        <div class="mb-3">
                            @if (offer.Status == TradeOfferStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Bekliyor</span>
                            }
                            else if (offer.Status == TradeOfferStatus.Accepted)
                            {
                                <span class="badge bg-success">Kabul Edildi</span>
                            }
                            else if (offer.Status == TradeOfferStatus.Rejected)
                            {
                                <span class="badge bg-danger">Reddedildi</span>
                            }
                        </div>
                        
                        @if (offer.Status == TradeOfferStatus.Pending)
                        {
                            <div class="d-grid gap-2">
                                <form asp-action="Accept" asp-route-id="@offer.Id" method="post" onsubmit="return confirm('Bu takas teklifini kabul etmek istediğinize emin misiniz? Kabul edilince her iki ilan da \'Takasta\' durumuna geçecektir.');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success w-100">Kabul Et</button>
                                </form>
                                <form asp-action="Reject" asp-route-id="@offer.Id" method="post" onsubmit="return confirm('Bu takas teklifini reddetmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger w-100">Reddet</button>
                                </form>
                            </div>
                        }
                        else if (offer.Status == TradeOfferStatus.Accepted)
                        {
                            var whatsAppLinks = ViewBag.WhatsAppLinks as Dictionary<int, string>;
                            var whatsAppLink = whatsAppLinks != null && whatsAppLinks.ContainsKey(offer.Id) 
                                ? whatsAppLinks[offer.Id] 
                                : null;
                            var isCompleted = offer.RequestedItem?.Status == ItemStatus.Completed || offer.OfferedItem?.Status == ItemStatus.Completed;

                            @if (isCompleted)
                            {
                                <div class="alert alert-secondary mb-0">
                                    <small><strong>✓</strong> Bu takas tamamlandı. İlanlar 'Tamamlandı' durumunda.</small>
                                </div>
                            }
                            else
                            {
                                <div class="d-grid gap-2">
                                    @if (!string.IsNullOrEmpty(whatsAppLink) && offer.IsContactOpened)
                                    {
                                        <a href="@whatsAppLink" target="_blank" class="btn btn-success w-100" style="background-color: #25D366; border-color: #25D366;">
                                            <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 8px;">
                                                <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
                                            </svg>
                                            WhatsApp'ta İletişime Geç
                                        </a>
                                    }
                                    
                                    @if (offer.RequestedItem?.Status != ItemStatus.Completed && offer.OfferedItem?.Status != ItemStatus.Completed)
                                    {
                                        <form asp-action="Complete" asp-route-id="@offer.Id" method="post" onsubmit="return confirm('Takası tamamlamak istediğinize emin misiniz? Tamamlandıktan sonra ilanlar güncellenemez ve silinemez.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-primary w-100">Takas Tamamlandı</button>
                                        </form>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
