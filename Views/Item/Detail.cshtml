                        <div class="card shadow-sm h-100" style="transition: transform 0.2s, box-shadow 0.2s;">
                            <a asp-action="Detail" asp-route-id="@match.Id" style="text-decoration: none; color: inherit;">
                                @if (match.Images.Any())
                                {
                                    <img src="@match.Images.First().ImagePath" class="card-img-top" alt="@match.Title" style="height: 200px; object-fit: cover; border-radius: 16px 16px 0 0;" />
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px; border-radius: 16px 16px 0 0;">
                                        <span class="text-muted small">Fotoƒüraf Yok</span>
                                    </div>
                                }
                                
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title">@match.Title</h6>
                                    <small class="text-muted mb-2">
                                        ‚Ç∫@match.EstimatedMinValue.ToString("N0") - ‚Ç∫@match.EstimatedMaxValue.ToString("N0")
                                    </small>
                                    <span class="badge bg-info text-dark mb-2 small">ƒ∞stenen: @match.WantedItemName</span>
                                    <span class="badge bg-secondary small">üìç @match.City, @match.District</span>
                                </div>
                            </a>
                        </div>
