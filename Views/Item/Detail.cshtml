                    <p class="text-muted">@Model.Description</p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <h5 class="fw-bold">Tahmini Deƒüer Aralƒ±ƒüƒ±</h5>
