                    <small class="text-muted">
                        <strong>Olu≈üturulma Tarihi:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm sticky-top" style="top: 20px;">
            <div class="card-body p-4">
                @if (ViewBag.IsOwner == true)
                {
                    <div class="alert alert-info mb-0">
                        <strong>‚ÑπÔ∏è Bilgi:</strong> Bu ilan size aittir.
                    </div>
                }
                else if (User.Identity?.IsAuthenticated == true)
                {
                    <h5 class="card-title mb-3">ƒ∞≈ülemler</h5>
