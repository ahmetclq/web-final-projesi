@model SwapSmart.Models.ApplicationUser
@{
    ViewData["Title"] = "Profilim";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-5">
                <h2 class="card-title text-center mb-4">Profilim</h2>
                
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Ad Soyad</label>
                            <div class="form-control-plaintext border-bottom pb-2">
                                @Model.FullName
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label class="form-label fw-bold text-muted">E-posta</label>
                        <div class="form-control-plaintext border-bottom pb-2">
                            @Model.Email
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Telefon Numarası</label>
                        <div class="form-control-plaintext border-bottom pb-2">
                            @Model.PhoneNumber
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label class="form-label fw-bold text-muted">İl</label>
                        <div class="form-control-plaintext border-bottom pb-2">
                            @Model.City
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">İlçe</label>
                        <div class="form-control-plaintext border-bottom pb-2">
                            @Model.District
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-primary w-100">
                        Profili Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
